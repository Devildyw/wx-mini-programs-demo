<view class="t-background">
  <view class="t-i">
  <image src="https://ding-blog.oss-cn-chengdu.aliyuncs.com/images/%E6%A0%A1%E5%9B%AD%E5%AD%A6%E7%94%9F.png" mode=""/>
  </view>
  <view class="t-login">
    <!-- <view class="t-b">{{title}}</view> -->
    <view class="t-x">
      <view class="t-a">
        <image src="../../assets/icon/user.png" mode="" class="t-i"/>
        <input type="text" class="t-input1" name="username" placeholder="请输入用户名" model:value="{{account}}"/>
      </view>
      <view class="t-a">
        <image src="../../assets/icon/验证码.png"  mode="" class="t-i"/> 
        <input type="password" class="t-input1" name="password" placeholder="请输入密码"  model:value="{{password}}"/>
      </view>
      <view class="t-a">
        <image src="../../assets/icon/验证码.png"  mode="" class="t-i"/> 
        <input type="text" class="t-input2" name="code" placeholder="请输入验证码" model:value="{{code}}"/>
      </view>
      
      <image src="{{image}}" class="t-img" bind:tap="refreshCode" mode=""></image>
      
      <view class="t-d">新生账号会在开学后开通，由辅导员通知</view>
    <button class="t-t" bind:tap="login">立即登录</button>
    </view>
    <view class="t-f">登录即同意<text>用户协议</text></view>
    <view class="t-e">
    </view>
  </view>
</view>