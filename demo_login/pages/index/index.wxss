/**index.wxss**/
page {
  background-color: white;
}

button.form_button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  display: inline;
  position: static;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  font-size: 26rpx;
  
}


button.form_button::after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
  
}

.navs {
  padding: 30rpx 50rpx;
  display: flex;
  align-items: flex-start;
  flex-flow: column wrap;
  flex-direction: row;
  height: 100%;
}

.nav {
  width: 25%;
  
}

.nav-icon {
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 5rpx auto;
}

.nav-desc {
  display: block;
  margin: 5rpx;
}

.swiper {
  

  width: 100%;

  border-radius: 50rpx;

  overflow: hidden;

  margin: 20rpx auto;

 
  


}


.swiper image {
  width: 100%;
  height: 100%;
}

.color0{
  background-color: #8BC34A;
}
.color1{
  background-color: #00BCD4;
}
.color2{
  background-color: #FF4081;
}
.color3{
  background-color: #03A9F4;
}
.color4{
  background-color: #8BC34A;
}
.color5{
  background-color: #2196F3;
}
.color6{
  background-color: #4CAF50;
}




.card-theme {
  --td-swiper-radius: 0;
  --td-swiper-item-padding: 0 12rpx;
  --td-swiper-nav-dot-color: #e7e7e7;
  --td-swiper-nav-dot-active-color: #0052d9;

  padding-bottom: 18px;
}

.card-theme .card-theme-nav {
  bottom: -18px;
}

.scale-candidate {
  height: 126px !important;
}

.dark {
  background-color: #0052d9;
}

.light {
  background-color: #366ef4;
}

.dark,
.light {
  background-clip: content-box;
  color: #fff;
  font-size: 28rpx;
  line-height: 96rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.grid-list {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.grid-course-hot-container{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
}

.hot-course-container{
  display: flex;
  flex-direction: column;
}

.hot-course{
  display: flex;
  flex-wrap: wrap;
}
.hot-course-item{
  width: 33.3%;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.hot-course-item-cell{
  /* border: 1rpx solid #00BCD4; */
  display: flex;
  height: 100%;
  width: 90%;
  border-radius: 20rpx;
  flex-direction: column;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 1px 0px;
}

.notice-bar{
  width: 96%;
  margin-left: 2%;
}

.hot-course-item-cell-top{
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #E1F5F7;
  border-radius:20rpx 20rpx 0rpx 0rpx;
}

.hot-course-item-cell-top image{
  margin-top: 5%;
  height: 75rpx;
  width: 75rpx;
}

.hot-course-item-cell-bottom{
  border: 1rpx solid #e7e7e7;
  height: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}

.hot-course-item-cell-text{
  margin-top: 2%;
}
.hot-course-item-cell-title{
  margin: 10rpx;
}