.gift-container{
  /* border: 1rpx solid red; */
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: row;
}

.gift-image{
  height: 96%;
  margin-top: 2.5%;
  margin-left: 16rpx;
  justify-content: center;

  border: 1rpx solid #2768d89d; 
}

.gift-info{
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
}

.gift-header{
  height: 180rpx;
  margin-top: 10rpx;
}
.gift-header .gift-title{
  font-size: large;
  font-weight: bold;
}
.gift-header .gift-discription{
  margin-top: 5rpx;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* 指定显示文本的行数 */
  overflow: hidden; /* 超出隐藏 */
}