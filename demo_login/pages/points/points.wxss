.UCenter-bg {
  background-image: linear-gradient(to top, #305ca8 100%, #1e3c72 1%, #1e3c72 0%);
  background-size: cover;
  height: 510rpx;
  display: flex;
  padding-top: 40rpx;
  overflow: hidden;
  justify-content: flex-start;
  width: 100%;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  
}

.avatar{
  width: 180rpx;
  height: 40%;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
  border: 4px outset #FF6600; 
} 

.points-container{
  width: 90%;
  height: 60%;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.points-container .points{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 60rpx;
  font-weight: normal;
  color: rgb(255, 204, 146);

}

.points-container .info{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  font-weight: bold;
}

.info .points-icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.neetpoints-icon{
  width: 32rpx;
  height: 32rpx;
  margin-left: 5rpx;
}
.points-container .icon{
  width: 300rpx;
  height: 300rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.text-df {
  font-size: large;
  font-weight: bold;
}
.basicInfo-Container {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  flex-wrap:wrap;
  justify-content: space-around;
  align-content: flex-start;
}

.basicInfo-Container text{
  text-align:left;
  margin-right: 5%;
}

.outermost-container{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
}

.gift-item{
  width: 96%;
  margin-left: 2%;
  height: 260rpx;
  margin-top: 20rpx;
  box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
}

/**/
.tr {
  display: flex;
}

.col {
  margin: 0 32rpx;
}

.tr+.tr {
  margin-top: 48rpx;
}

.text {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
  line-height: 44rpx;
  margin-bottom: 32rpx;
}

