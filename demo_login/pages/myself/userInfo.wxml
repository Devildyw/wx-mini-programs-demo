<navigator open-type="navigateBack" delta="1"></navigator>
<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">


    <view class='avatar'>
      <image src="{{userInfo.avatar}}" mode="widthFix" />
    </view>
  </view>



  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <van-cell-group>
      <view class="margin-top-sm margin-bottom-sm margin-left-sm">
        <text>基本信息</text>
      </view>
      <van-field value="{{ userInfo.nickName }}" left-icon="user-o" label="姓名" readonly="{{true}}" placeholder="暂无" border="{{ true }}" />
      <van-field value="{{ userINfo.remark }}" left-icon="contact" label="身份" readonly="{{true}}" placeholder="暂无" border="{{ true }}" />
      <van-field value="{{ userInfo.class }}" left-icon="friends-o" label="班级" readonly="{{true}}" placeholder="暂无" border="{{ true }}" />
      <van-field value="{{ userInfo.entryDate }}" left-icon="tosend" label="入学日期" readonly="{{true}}" placeholder="1970-01-01" border="{{ true }}" />
      <view class="margin-top-sm margin-bottom-sm margin-left-sm">
        <text>其他信息</text>
      </view>
      <van-field value="{{ userInfo.phonenumber }}" left-icon="phone-o" label="手机号" readonly="{{editControl}}" placeholder="暂无" border="{{ true }}" />
      <van-field value="{{ userInfo.sex==0?'男':'女' }}" left-icon="closed-eye" label="性别" readonly="{{editControl}}" placeholder="未知" border="{{ true }}" />
      <van-field value="{{ userInfo.brithDay }}" left-icon="tosend" label="出生日期" readonly="{{editControl}}" placeholder="1970-01-01" border="{{ true }}" />
      
      <van-field value="{{ userInfo.email }}" left-icon="envelop-o" label="邮箱" readonly="{{editControl}}" placeholder="暂无" border="{{ true }}" />
    </van-cell-group>
  </view>

  <view class="edit">
    <button hidden="{{editHidden}}" bind:tap="editInfo">编辑资料</button>
  </view>
  <view class="save">
    <button hidden="{{saveHidden}}" bind:tap="cancel">取消</button>
    <button hidden="{{saveHidden}}" bind:tap="saveInfo">保存修改</button>
  </view>
  <view class="cu-tabbar-height"></view>


</scroll-view>