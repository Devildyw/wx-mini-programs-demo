/* pages/shoplist/shoplist.wxss */

.shop-item {
  display: flex;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin: 15rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
}



.thumb image{
  width: 250rpx;
  height: 250rpx;
  display: block;
  margin-right: 15rpx;
}


.info {
  height: 220rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.info .choose {
  
  height: 100%;
  width: 130rpx;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  margin-left: 100rpx;
  display: flex;
  flex-direction: column;
  /* background: linear-gradient(220.55deg, #3793FF 0%, #0017E4 100%); */
  background-color: #2c8efd;
}
.choose :active {
  background-color: #33364e;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.info .choose view{
  text-align: center;
  color: rgb(246, 235, 235);
}
.info .choose .choose-top{
  line-height: 180rpx;
  height: 70%;
}
.info .choose .choose-bottom{
  line-height: 40rpx;
  height: 30%;
}

.info-container{
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 80%;
  font-size: 24rpx;
}
.shop-title {
  font-weight: bold;
  font-size: large;
}

.basicInfo{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap
}


.basicInfo text{
  margin-left: 20rpx;
}