  justify-content: flex-end;
}
.reply-info-left image{
  width: 40rpx;
  height: 40rpx;
}
.reply-info-left-item{
  display: flex;
  flex-direction: row;
  margin-right: 25rpx;
}
.reply-info-left-item view{
  margin-left: 15rpx;
