
page{
  font-family: "microsoft yahei";
}
.QA-item {
  display: flex;
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  width: 96%;
  height: 350rpx;
  margin-left: 2%;
  background-color: rgb(255, 255, 255);
  box-shadow: rgba(3, 102, 214, 0.3) 0px 0px 0px 3px;
}
.outermost-container{
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  width: 100%;
}
.QA-container{
  padding: 15rpx;
  display: flex;
  width: 100%;
  flex-direction: column;

}
.QA-basic-info{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 100%;
  height: 300rpx;
}
.QA-info{
 display: flex;
 flex-direction: row;
 margin-top: 8rpx;
}


.reply-content{
  width: 100%;

}
.QA-title{
  font-size: large;
  font-weight: bold;
}

.QA-info-left{
  width: 35%;
  display: flex;
  flex-direction: row;
}
.QA-info-left image{
  width: 40rpx;
  height: 40rpx;
}
.QA-info-left-item{
  display: flex;
  flex-direction: row;
  margin-right: 25rpx;
}
.QA-info-left-item view{
  margin-left: 15rpx;
}
.QA-info-right-item {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.QA-info-right{
  width: 65%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  text-align: right;
}

.QA-info-right-Date{
  width: 160rpx;
  margin-left: 20rpx;
}

.QA-info-right-item-avatar{
  margin-right: 10rpx;
}

.textarea-example {
  /* padding: 32rpx 32rpx 48rpx; */
  background-color: var(--bg-demo-color);
  display: flex;
  width: 100%;
  justify-content: space-around;
}


.external-class {
  width: 88%;
  padding-top: 24rpx !important;
  padding-bottom: 24rpx !important;
  
}


.textarea-example__label {
  display: block;
  color: var(--td-text-color-primary);
  font-size: 24rpx;
  line-height: 40rpx;
  padding-bottom: 16rpx;
}



