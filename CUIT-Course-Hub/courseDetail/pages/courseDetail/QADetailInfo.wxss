  text-align: right;
}

.reply-info-right-item-avatar{
  margin-right: 10rpx;
}
.line{
  width: 100%;
  height: 86rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  font-family: "microsoft yahei";
  background-color: rgb(255, 255, 255);
  text-align: center;
  line-height: 86rpx;
  /* border: 1rpx solid #e0e0e0; */
  box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px, rgb(209, 213, 219) 0px 0px 0px 1px inset;
}
.submit-button{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

/* reply-end */

/* popup-start */
.block {
  width: 100%;
  height: 118;
  background: var(--td-bg-color-container);
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

/* .wrapper {
  margin: 32rpx;
  display: block;
} */

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
  background-color: white;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0px 60px 40px -7px;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}
.recent-reply{
  height: 80rpx;

  box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px, rgb(209, 213, 219) 0px 0px 0px 1px inset;
  /* border: 0.5rpx solid rgb(34, 121, 161); */
  border-radius: 50rpx;
  line-height: 80rpx;
  margin-top: 8rpx;
  margin-bottom: 10rpx;
}
/* popup-end */


