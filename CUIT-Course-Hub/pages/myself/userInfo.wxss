.UCenter-bg {
  /* background-image: url(https://ding-blog.oss-cn-chengdu.aliyuncs.com/images/%E7%8C%AE%E7%88%B1%E5%BF%83.png); */
  background-size: cover;
  height: 300rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.detail-info-header{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: large;
  font-weight: bold;
}

.editIcon image{
  margin-top: 10rpx;
  width: 48rpx;
  height: 48rpx;
}
.avatar{
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
} 

.scrollPage{
  background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
}

.detail-info-container{
  /* width: 420%; */
  height: 400rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.UCenter-bg text {
  opacity: 0.8;
  
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.text-df {
  font-size: large;
  font-weight: bold;
}
.basicInfo-Container {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  flex-wrap:wrap;
  justify-content: space-around;
  align-content: flex-start;
}

.basicInfo-Container text{
  text-align:left;
  margin-right: 5%;
}

.edit{
  width: 92%;
  margin-left: 4%;
}

.edit button{
  background-color: rgb(47, 137, 221);
  color: #fff;
}

.save{
  width: 92%;
  margin-left: 4%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.save button{
  background-color: rgb(47, 137, 221);
  color: #fff;
  width: 48%;
}